                            <Button  Text="Add NewCategory"   WidthRequest="200"  HeightRequest="40"  HorizontalOptions="End" TextColor="White" BackgroundColor="#41af4b"></Button>
                          </StackLayout>
                        </StackLayout>
                      </StackLayout>

                     

