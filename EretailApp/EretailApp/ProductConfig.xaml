                            <Label Text="{Binding HGroup}"  WidthRequest="100" TextColor="Black" HorizontalTextAlignment="Center"  VerticalTextAlignment="Center"  HorizontalOptions="Start"  FontSize="16" ></Label>
                          </StackLayout>
                        </ViewCell>
