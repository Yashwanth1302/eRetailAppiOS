    <ContentView Padding="0" HorizontalOptions="FillAndExpand" Margin="0,0,0,10" >
      <ContentView Style="{StaticResource BorderStyle}" >
        <ContentView Style="{StaticResource InternalViewStyle}">
          <StackLayout Orientation="Vertical" >
            
        <StackLayout Orientation="Horizontal"  Padding="5" Spacing="5">

      <StackLayout HorizontalOptions="FillAndExpand" >

        <SearchBar x:Name="searchvalue" Placeholder="Search here"   WidthRequest="150" HorizontalOptions="FillAndExpand" PlaceholderColor="#C8C8C8"  TextColor="Gray"   CancelButtonColor="Gray" SearchButtonPressed="btnclick"></SearchBar>

      </StackLayout>
   </StackLayout>
    
    <StackLayout HorizontalOptions="FillAndExpand"  Padding="5" Spacing="5" >
      <ListView x:Name="SuplierList"
             HasUnevenRows="True" >
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>

              <StackLayout Orientation="Horizontal" BackgroundColor="White">
                <Label Text="{Binding Contact}"    HeightRequest="35"   TextColor="Black" HorizontalTextAlignment="Start"  VerticalTextAlignment="Center"  HorizontalOptions="FillAndExpand"  FontSize="16" ></Label>

       <Label Text="{Binding State}" HeightRequest="35"  TextColor="Black" HorizontalTextAlignment="Center"  VerticalTextAlignment="Center"  HorizontalOptions="End" FontSize="16" ></Label>
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
          </StackLayout>
        </ContentView>
      </ContentView>
    </ContentView>
    
  </StackLayout>
  
</ContentPage>